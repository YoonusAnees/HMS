<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    android:id="@+id/main"
    tools:context=".oceanroom">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/toggle_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:backgroundTint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocean View Room Selection"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/toggle_icon" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ocean View Suite Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#959795">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/oceanRoomImage1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ocean_view_room_1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Ocean View Suite 1" />

                    <TextView
                        android:id="@+id/oceanRoomTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomImage1"
                        android:text="Ocean View Suite 1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/oceanRoomDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomTitle1"
                        android:text="Luxurious suite with an ocean view, featuring elegant decor and modern amenities."
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/oceanRoomPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomDescription1"
                        android:text="Price: $350 per night"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/BTNbookOceanRoomButton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomPrice1"
                        android:text="Book It"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ocean View Suite Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#959795">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/oceanRoomImage2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/o_2"
                        android:scaleType="centerCrop"
                        android:contentDescription="Ocean View Suite 2" />

                    <TextView
                        android:id="@+id/oceanRoomTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomImage2"
                        android:text="Ocean View Suite 2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/oceanRoomDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomTitle2"
                        android:text="Wake up to ocean waves in this stylish suite with a private balcony."
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/oceanRoomPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomDescription2"
                        android:text="Price: $370 per night"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bookOceanRoomButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomPrice2"
                        android:text="Book It"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ocean View Suite Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#959795">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/oceanRoomImage3"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/o_3"
                        android:scaleType="centerCrop"
                        android:contentDescription="Ocean View Suite 3" />

                    <TextView
                        android:id="@+id/oceanRoomTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomImage3"
                        android:text="Ocean View Suite 3"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/oceanRoomDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomTitle3"
                        android:text="Modern suite with panoramic ocean views and luxurious amenities."
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/oceanRoomPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomDescription3"
                        android:text="Price: $390 per night"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bookOceanRoomButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomPrice3"
                        android:text="Book It"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ocean View Suite Card 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="#959795">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/oceanRoomImage4"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="Ocean View Suite 4" />

                    <TextView
                        android:id="@+id/oceanRoomTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomImage4"
                        android:text="Ocean View Suite 4"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/oceanRoomDescription4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomTitle4"
                        android:text="Experience luxury with a spacious suite overlooking the ocean."
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/oceanRoomPrice4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomDescription4"
                        android:text="Price: $400 per night"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/bookOceanRoomButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oceanRoomPrice4"
                        android:text="Book It"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
